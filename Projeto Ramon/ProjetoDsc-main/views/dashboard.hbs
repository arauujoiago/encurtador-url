<div class="container d-flex justify-content-center">

    {{#if msgSuccess}}

    <div class="alert alert-success alert-dismissible fade show mb-0 mt-4" role="alert"
        style="width: fit-content; position: fixed">
        {{msgSuccess}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">x</span>
        </button>
    </div>
    {{/if}}
</div>
<div class="container rounded" id="dashboardPanel">
    <h3 class="text-center">Bem-vindo!</h3>
    <div class="container row text-center mt-4 mb-4">
        <div class="col-sm pr-1 pl-1"><a href="criarChamado"><button type="button" class="btn btn-dark btn-lg">Inserir
                    Chamado</button></a>
        </div>
        {{#if admin}}<div class="col-sm pr-1 pl-1"><a href="criarCadastro"><button type="button"
                    class="btn btn-dark btn-lg">Cadastrar
                    Funcionário</button></a>
        </div>
        <div class="col-sm pr-1 pl-1"><a href="criarSalas"><button type="button" class="btn btn-dark btn-lg">Gerenciar
                    Salas</button></a>
        </div>
        {{/if}}
    </div>

    <div class="container pt-2 pl-2 pr-2 mt-4">
        <h4 class="text-center mb-3">CHAMADOS</h4>
        <table class="table table-bordered table-hover table-sm text-center table-striped table-responsive-sm">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Usuário</th>
                    <th scope="col">Descrição</th>
                    <th scope="col">Sala</th>
                    <th scope="col">Status</th>
                </tr>
            </thead>
            <tbody>{{#each chamados}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{nome}}</td>
                    <td>{{problema}}</td>
                    <td>{{salas}}</td>
                    <td><select>
                            <option style="font-weight: bold;">{{status}}</option>
                            <option>Concluido</option>
                            <option>Pendente</option>
                        </select> </td>
                </tr> {{/each}}
            </tbody>
        </table>
    </div>
</div>

<style>
    footer {
        position: relative !important;
    }
</style>