<div class="container d-flex justify-content-center">

    {{#if msgSuccess}}

    <div class="alert alert-success alert-dismissible fade show mb-0 mt-4" role="alert"
        style="width: fit-content; position: absolute">
        {{msgSuccess}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">x</span>
        </button>
    </div>
    {{/if}}
    {{#if msgError}}
    <div class="alert alert-danger alert-dismissible fade show mb-4 mt-4" style="width: fit-content; position: absolute"
        role="alert">
        {{msgError}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">x</span>
        </button>
    </div>
    {{/if}}
</div>

<div class="container text-center">
    <div class="container-fluid rounded" id="formulario">
        <form action="addCadastro" method="POST">
            <div class="form-group">
                <label for="nome">Nome</label>
                <input required type="text" class="form-control" id="nome" name="nome">
            </div>
            <div class="form-group">
                <label for="cpf">CPF</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text"><i class="fas fa-user"></i></div>
                    </div>
                    <input required type="text" class="form-control" id="cpf" name="cpf">
                </div>
            </div>
            <div class="form-group">
                <label for="senha">Senha</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text"><i class="fas fa-key"></i></div>
                    </div>
                    <input required type="password" class="form-control" id="senha" name="senha">
                </div>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text"><i class="fas fa-envelope"></i></div>
                    </div>
                    <input required type="text" class="form-control" id="email" name="email">
                </div>
            </div>
            <div class="form-group">
                <label for="cargo">Cargo</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text"><i class="fas fa-wallet"></i></div>
                    </div>
                    <select class="form-control" id="cargo" name="cargo">
                        <option>Professor</option>
                        <option>Funcionário</option>
                        <option>Coordenador</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="admin">Admin</label>
                <div class="input-group">
                    <select class="form-control" id="admin" name="admin">
                        <option value="true">Sim</option>
                        <option value="false">Não</option>
                    </select>
                </div>
            </div>
            <div class="col text-center">
                <button type="submit" class="btn btn-dark">Cadastrar</button>
            </div>
        </form>
    </div>
</div>

<style>
    footer {
        position: relative;
    }
</style>