<div class="container d-flex justify-content-center">

    {{#if msgSuccess}}

    <div class="alert alert-success alert-dismissible fade show mb-0 mt-4" role="alert"
        style="width: fit-content; position: absolute">
        {{msgSuccess}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">x</span>
        </button>
    </div>
    {{/if}}
    {{#if msgError}}
    <div class="alert alert-danger alert-dismissible fade show mb-4 mt-4" style="width: fit-content; position: absolute"
        role="alert">
        {{msgError}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">x</span>
        </button>
    </div>
    {{/if}}
</div>

<div class="container text-center">
    <div class="container-fluid rounded" id="formulario">
        <h4>Inserir:</h4>
        <form action="addSalas" method="POST">
            <div class="form-group">
                <label for="nome">Nome da Sala</label>
                <input required type="text" class="form-control" id="nome" name="nome">
            </div>
            <div class="col text-center">
                <button type="submit" class="btn btn-dark">Inserir</button>
            </div>
        </form>
        <h4>Remover:</h4>
        <form action="delSalas" method="POST">
            <div class="form-group">
                <label for="delSalas">Nome da Sala</label>
                <select class="form-control" id="delSalas" name="delSalas">
                    {{#each salas}}<option value="{{nome}}">{{nome}}</option>{{/each}}
                </select>
            </div>
            <div class="col text-center">
                <button type="submit" class="btn btn-danger">Remover</button>
            </div>
        </form>
    </div>
</div>